import UIKit

extension UILabel{
    
    static func labelDefault(title:String,fontSize:CGFloat,numberOfLines:Int = 0) -> UILabel{
        let lbl = UILabel()
        lbl.font = UIFont.init(name: "Arial Rounded MT Bold", size: fontSize)
        lbl.font = UIFont.boldSystemFont(ofSize: fontSize)
        lbl.textColor = UIColor.black
        lbl.text = title
        lbl.translatesAutoresizingMaskIntoConstraints = false
        return lbl
    }
}
